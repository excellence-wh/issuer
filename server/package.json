{
  "name": "server",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "tsx src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/server.js --format=esm --packages=external",
    "test": "node --test",
    "deploy": "deploy.bat",
    "deploy:pull": "deploy.bat --pull",
    "windows:setup-autostart": "powershell -ExecutionPolicy Bypass -File scripts/setup-autostart.ps1"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@hono/standard-validator": "^0.2.2",
    "@scalar/hono-api-reference": "^0.9.34",
    "hono": "^4.11.4",
    "hono-openapi": "^1.1.2",
    "openapi-types": "^12.1.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "esbuild": "^0.25.3",
    "tsx": "^4.19.4"
  }
}
